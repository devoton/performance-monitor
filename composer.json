{
    "name": "otontraore/performance-monitor",
    "description": "Un tableau de bord de monitoring des performances avec notifications",
    "type": "library",
    "keywords": ["symfony", "monitoring", "performance", "mercure", "alertes"],
    "license": "MIT",
    "authors": [
        {
            "name": "Oton TRAORE",
            "email": "contact@otontraore.com",
            "homepage": "https://otontraore.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/mercure-bundle": "^0.5",
        "symfony/mailer": "^5.0",
        "symfony/console": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/console cache:warmup"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
