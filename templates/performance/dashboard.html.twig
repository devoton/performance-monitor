{# templates/performance/dashboard.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tableau de bord des performances</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Tableau de bord des performances</h1>

        <div class="row">
            <div class="col-md-6">
                <h4>Métriques de performance</h4>
                <ul>
                    <li><strong>Temps de réponse :</strong> {{ performance.time }} ms</li>
                    <li><strong>Utilisation mémoire :</strong> {{ performance.memory }} KB</li>
                    <li><strong>Requêtes SQL :</strong> {{ performance.sql_queries }} requêtes</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h4>Alertes</h4>
                {% if performance.alert %}
                    <div class="alert alert-danger">
                        <strong>Alerte :</strong> {{ performance.alert }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</body>
</html>
